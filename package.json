{
  "name": "noteify",
	"displayName": "noteify",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:noteify.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "noteify.loadDocs",
				"title": "Load Noteify Docs"
			},
			{
				"command": "noteify.deleteThread",
				"title": "Delete Thread"
			},
			{
				"command": "noteify.editNote",
				"title": "Edit Note"
			},
			{
				"command": "noteify.deleteNote",
				"title": "Delete Note"
			},
			{
				"command": "noteify.addSymbolDoc",
				"title": "Add Symbol Documentation"
			}
		],
		"menus": {
			"comments/commentThread/title": [
				{
					"command": "noteify.deleteThread",
					"group": "navigation",
					"when": "commentController == comment-sample && !commentThreadIsEmpty"
				}
			],
			"comments/comment/title": [
				{
					"command": "noteify.editNote",
					"group": "group@1",
					"when": "commentController == noteify-comment"
				},
				{
					"command": "noteify.deleteNote",
					"group": "group@2",
					"when": "commentController == noteify-comment && comment == canDelete"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.86.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
